<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Default theme configuration parameters -->
        <record id="nova_theme_mode_default" model="ir.config_parameter">
            <field name="key">nova_theme.mode</field>
            <field name="value">light</field>
        </record>
        <record id="nova_theme_accent_color_default" model="ir.config_parameter">
            <field name="key">nova_theme.accent_color</field>
            <field name="value">indigo</field>
        </record>
        <record id="nova_theme_animations_default" model="ir.config_parameter">
            <field name="key">nova_theme.animations</field>
            <field name="value">True</field>
        </record>
        <record id="nova_theme_sidebar_collapsed_default" model="ir.config_parameter">
            <field name="key">nova_theme.sidebar_collapsed</field>
            <field name="value">False</field>
        </record>
        <record id="nova_theme_font_size_default" model="ir.config_parameter">
            <field name="key">nova_theme.font_size</field>
            <field name="value">default</field>
        </record>
        <record id="nova_theme_font_family_default" model="ir.config_parameter">
            <field name="key">nova_theme.font_family</field>
            <field name="value">inter</field>
        </record>
    </data>
</odoo>
